class Solution(object):
    def eraseOverlapIntervals(self, intervals):
        intervals.sort(key=lambda x: x[1])
        n = len(intervals)
        count = 1
        end = intervals[0][1]

        for i in range(1, n):
            if intervals[i][0] >= end:
                count += 1
                end = intervals[i][1]

        return n - count
